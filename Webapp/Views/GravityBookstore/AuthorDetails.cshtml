@model Webapp.Models.GravityBookstore.AuthorDetailsViewModel

<h2>@Model.AuthorName</h2>

<div class="card">
    <div class="card-header">
        <h4>Books by this author:</h4>
    </div>
    <div class="card-body">
        <select class="form-control" id="bookSelect" onchange="navigateToEdit(this.value)">
            <option value="">Select a book...</option>
            @foreach (var book in Model.Books)
            {
                <option value="@book.BookId">@book.Title</option>
            }
        </select>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        function navigateToEdit(bookId) {
            if (bookId) {
                window.location.href = '@Url.Action("Edit")/' + bookId;
            }
        }
    </script>
}